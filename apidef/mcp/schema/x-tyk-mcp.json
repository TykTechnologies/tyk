{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "tools": {
      "$ref": "#/definitions/X-Tyk-MCP-Tools"
    },
    "prompts": {
      "$ref": "#/definitions/X-Tyk-MCP-Prompts"
    },
    "resources": {
      "$ref": "#/definitions/X-Tyk-MCP-Resources"
    }
  },
  "definitions": {
    "X-Tyk-MCP-Tools": {
      "type": "object",
      "description": "MCP tools definitions conforming to MCP protocol specification",
      "additionalProperties": {
        "$ref": "#/definitions/X-Tyk-MCP-Tool"
      }
    },
    "X-Tyk-MCP-Tool": {
      "type": "object",
      "description": "MCP tool definition as per MCP protocol",
      "required": ["name", "inputSchema"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique tool identifier conforming to MCP naming conventions"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of what the tool does"
        },
        "inputSchema": {
          "type": "object",
          "description": "JSON Schema (draft 2020-12) defining the tool's input parameters"
        }
      }
    },
    "X-Tyk-MCP-Prompts": {
      "type": "object",
      "description": "MCP prompts definitions conforming to MCP protocol specification",
      "additionalProperties": {
        "$ref": "#/definitions/X-Tyk-MCP-Prompt"
      }
    },
    "X-Tyk-MCP-Prompt": {
      "type": "object",
      "description": "MCP prompt definition as per MCP protocol",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Unique prompt identifier"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the prompt's purpose"
        },
        "arguments": {
          "type": "array",
          "description": "List of arguments the prompt accepts",
          "items": {
            "$ref": "#/definitions/X-Tyk-MCP-PromptArgument"
          }
        }
      }
    },
    "X-Tyk-MCP-PromptArgument": {
      "type": "object",
      "description": "Argument definition for MCP prompts",
      "required": ["name", "required"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Argument name"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of the argument"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this argument is required"
        }
      }
    },
    "X-Tyk-MCP-Resources": {
      "type": "object",
      "description": "MCP resources definitions conforming to MCP protocol specification",
      "additionalProperties": {
        "$ref": "#/definitions/X-Tyk-MCP-Resource"
      }
    },
    "X-Tyk-MCP-Resource": {
      "type": "object",
      "description": "MCP resource definition as per MCP protocol",
      "required": ["uri"],
      "properties": {
        "uri": {
          "type": "string",
          "description": "Resource URI following MCP URI scheme (e.g., file://, http://, custom://)"
        },
        "name": {
          "type": "string",
          "description": "Human-readable resource name"
        },
        "description": {
          "type": "string",
          "description": "Human-readable resource description"
        },
        "mimeType": {
          "type": "string",
          "description": "MIME type of the resource content"
        }
      }
    }
  }
}
