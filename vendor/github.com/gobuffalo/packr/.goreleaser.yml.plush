builds:
-
  goos:
    - darwin
    - linux
    - windows
  env:
    - CGO_ENABLED=0
  main: ./packr/main.go
  binary: packr

checksum:
  name_template: 'checksums.txt'

snapshot:
  name_template: "{{ .Tag }}-next"

changelog:
  sort: asc
  filters:
    exclude:
      - '^docs:'
      - '^test:'
<%= if (brew) { %>
brew:
  github:
    owner: gobuffalo
    name: homebrew-tap
<% } %>
